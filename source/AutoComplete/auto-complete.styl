@require 'nib'
@require '~modul.markup.ui-kit/markup/stylus/variables'

$prefix-ant-select = 'ant-select'

.{$prefix-ant-select}-dropdown
	position absolute
	margin 0
	padding 0
	box-sizing border-box
	background-color $cl-white
	border-radius 4px
	box-shadow $shadow-1
	z-index 100

.{$prefix-ant-select}-dropdown-menu
	margin 0
	padding-left 0
	max-width 100%
	max-height 360px
	overflow-y auto
	list-style-type none

.{$prefix-ant-select}-dropdown-menu-item
	padding 8px 12px
	box-sizing border-box
	min-height 44px
	cursor pointer

	&:hover
		background-color $cl-graphite-7
		border-bottom-color $cl-graphite-6
	
	&:not(:last-child)
		border-bottom 1px solid $cl-graphite-6
	
	&:first-child
		border-top-left-radius 4px
		border-top-right-radius 4px
	
	&:last-child
		border-bottom-right-radius 4px
		border-bottom-left-radius 4px


.{$prefix-ant-select}-dropdown-menu-item-active
	background-color $cl-graphite-7
	border-bottom-color $cl-graphite-6


.{$prefix-ant-select}-dropdown-hidden
	display none

.{$prefix-ant-select}-search__field__mirror
.{$prefix-ant-select}-selection__placeholder
.{$prefix-ant-select}-arrow
	display none !important